{
    "$schema": "http://json-schema.org/schema",
    "title": "Skills",
    "description": "JSON file for storing skills.",
    "type": "object",
    "properties": {
        "skills": {
            "description": "Array containing objects that define skills.",
            "type": "array",
            "items": {
                "type": "object",
                "description": "Object that defines a skill.",
                "properties": {
                    "name": {
                        "description": "Name of the skill.",
                        "type": "string"
                    },
                    "description": {
                        "description": "Summary of the skill.",
                        "type": "string"
                    },
                    "category": {
                        "description": "What category the skill falls into.",
                        "type":"string",
                        "enum": [ "language", "library" ]
                    },
                    "tags": {
                        "description": "Array containing tags that describe some of the attributes of the skill.",
                        "type": "array",
                        "items": {
                            "type":"string",
                            "description": "Tag which describes some attribute of the skill."
                        }
                    }
                },
                "required": [ "name", "description", "category" ]
            }
        }
    }
}